@model QuanLyFastFood.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Xem sản phẩm</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Default")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Xem sản phẩm</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Default Basic Forms Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Xem sản phẩm</h4>
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Tên sản phẩm</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.Ten)
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Mô tả</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.Mota)
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Hình ảnh</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    <img src="@Model.Anh" width="300" height="300" />
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Chi tiết</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.Raw(Model.Chitiet)
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Số lượng</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.TieuBieu)
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Giá</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.Gia)
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Loại món ăn</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.LoaiSP.Ten)
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Sơ lược</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.SoLuoc)
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Nhà sản xuất</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.NhaSanXuat)
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Năm sản xuất</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.NamSX)
                </div>
            </div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Ma }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
</div>
   
