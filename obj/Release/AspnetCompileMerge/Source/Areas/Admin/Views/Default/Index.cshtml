@model IEnumerable<QuanLyFastFood.Models.SanPham>
@using QuanLyFastFood.Models
@{
    ViewBag.Title = "Index";
}
<div class="pd-ltr-20">
    <div class="card-box pd-20 height-100-p mb-30">
        <div class="row align-items-center">
            
            @if (Session["nguoidung"] != null)
            {
                NguoiDung nd = (NguoiDung)Session["nguoidung"];

                <div class="col-md-8">
                    <h4 class="font-20 weight-500 mb-10 text-capitalize">
                        WELCOME BACK <br />
                        <b class="weight-600 font-30 text-blue">@nd.Ten</b>
                    </h4>
                </div>
            }
        </div>
    </div>

    <div class="card-box mb-30">
        <div class="pb-20 pt-20">
            <table class="data-table table hover nowrap container">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th class="datatable-nosort">Hình ảnh</th>
                        <th>Nhà sản xuất</th>
                        <th>Năm sản xuất</th>
                        <th>Giá</th>
                        <th class="datatable-nosort">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-3">
                                <div class="dropdown">
                                    <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                        <i class="icon-copy fa fa-chevron-down" style="color: black; font-size: small; padding-bottom: 11px"></i>
                                    </a>
                                    <b class="font-16">@item.Ten</b>
                                    <div class="dropdown-menu dropdown-menu-left">
                                        <div class="dropdown-item"><b>Sơ Lược:</b> @item.SoLuoc</div>
                                    </div>
                                </div>
                            </td>
                            <td class="table-plus">
                                <img src="@item.Anh" width="70" height="70" alt="">
                            </td>
                            <td>@item.NhaSanXuat</td>
                            <td>@item.NamSX</td>
                            <td>@item.Gia</td>
                            <td>
                                <div class="dropdown">
                                    <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                        <i class="dw dw-more"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                        <a class="dropdown-item" href="@Url.Action("Details","SanPhams", new { id = item.Ma })"><i class="dw dw-eye"></i> View</a>
                                        <a class="dropdown-item" href="@Url.Action("Edit","SanPhams", new { id = item.Ma })"><i class="dw dw-edit2"></i> Edit</a>
                                        <a class="dropdown-item" href="@Url.Action("DeleteConfirmed","SanPhams", new { id = item.Ma })"><i class="dw dw-delete-3"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>