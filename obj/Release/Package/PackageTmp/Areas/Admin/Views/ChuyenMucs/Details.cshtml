@model QuanLyFastFood.Models.ChuyenMuc

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Xem chuyên mục</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Default")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Xem chuyên mục</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Default Basic Forms Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Xem chuyên mục</h4>
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Tên chuyên mục</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.Ten)
                </div>
            </div>
            <div class="form-group row">
                <b class="col-sm-12 col-md-2 col-form-label">Mô tả</b>
                <div class="col-sm-12 col-md-10 col-form-label">
                    @Html.DisplayFor(model => model.Mota)
                </div>
            </div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Ma }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
</div>