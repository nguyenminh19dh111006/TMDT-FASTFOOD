@model QuanLyFastFood.Models.Voucher

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Sửa voucher</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Default")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Sửa voucher</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Default Basic Forms Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Sửa voucher</h4>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Mã voucher</label>
                    <div class="col-sm-12 col-md-10 col-form-label">
                        @Html.DisplayFor(model => model.MaVoucher, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.MaVoucher)
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Mô tả</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Hiệu lực</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HieuLuc, null, new { htmlAttributes = new { @class = "form-control" } })
                        <!--<label class="congtacduyet">
                            <input @(Convert.ToBoolean(Model.HieuLuc) == true ? "checked='checked'" : string.Empty)
                                   type="checkbox" name="status" value="@(Model.HieuLuc)">
                            <a name="MaVoucher" value="@(Model.MaVoucher)" class="keocongtac round"></a>
                        </label>-->
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Loại voucher</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LoaiVoucher, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LoaiVoucher, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Điều kiện</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DieuKien, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DieuKien, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Ngày kích hoạt</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayKichHoat, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayKichHoat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Ngày kết thúc</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="btn-list">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Sửa</button>
                    <a href="@Url.Action("Index", "Vouchers")" class="btn btn-secondary btn-lg btn-block">Quay lại</a>
                </div>
            }
        </div>
    </div>
</div>